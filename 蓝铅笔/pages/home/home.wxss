.audioVideos{
    padding: 0 20rpx;
    width: 97%;
    height: 500rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    box-shadow: 1rpx 1rpx 30rpx 1rpx rgba(0, 0, 0, 0.151);
}
.audioVideosText view{
    padding: 10rpx 0rpx;
}
.audioVideosText view:nth-child(2){
    font-weight: bold;
    font-size: 35rpx;
}
.audioVideosVideo video{
    width: 645rpx !important;
    height: 300rpx;
    border-radius: 15rpx;
}
.audioVideosVideoText{
    font-size: 20rpx;
    margin: 10rpx;  
    display: flex;
    justify-content: space-between;
    color: rgba(0, 0, 0, 0.623);
}
.coursesbox{
    width: 92%;
    /* height: 550rpx; */
