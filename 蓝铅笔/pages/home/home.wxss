    top: 20rpx;
}
.coursesbox .coursesboxs{
    width: 49%;
    box-shadow: 1rpx 1rpx 30rpx 1rpx rgba(0, 0, 0, 0.151);
    height: 480rpx;
    padding: 10rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
}
.coursesbox .coursesboxs view:nth-child(1){
    font-size: 22rpx;
}
